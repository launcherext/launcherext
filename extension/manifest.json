{
  "manifest_version": 3,
  "name": "Launch Ext",
  "version": "1.0.0",
  "description": "Create & Launch Memecoins Instantly",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/wallet-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "public/rocket-logo.png",
      "48": "public/rocket-logo.png",
      "128": "public/rocket-logo.png"
    }
  },
  "icons": {
    "16": "public/rocket-logo.png",
    "48": "public/rocket-logo.png",
    "128": "public/rocket-logo.png"
  },
  "description": "Create & Launch Memecoins Instantly - AI-powered token creation for pump.fun",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
